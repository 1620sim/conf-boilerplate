<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Front In BH 2013</title>

  <!-- CSS -->
  <link rel="stylesheet" href="css/demo.css" media="all">

  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
  <script>
    $(document).ready(function(){
      var width = screen.width,
          height = screen.height;

      $(".cover").css( 'height', height - 120 );
      $(".header").css( 'height', height - 100 )
    })
  </script>
</head>
<body>
  <div class="global">

    <div class="header">
      <img src="/img/background.png" alt="" class="cover">
      <div class="wrapper">
          <h1>
            <a href="#" class="logo" title="Logo - nome da empresa">
              <img src="<%= @site.images.logo %>" alt="Nome da empresa">
            </a>
          </h1>
          <h3>Maior evento de Front-end do Brasil</h3>
          <article class="infos-header">
            <span>
              <em>13 Julho 2013 - BH, MG</em>
              <a class="btn main" title="cadasre-se">Cadastre-se</a>
            </span>
            <span>
              <em>Patrocine Front In BH</em>
              <a class="btn main" title="cadasre-se">Midia Kit</a>
            </span>
          </article>
        </div><!-- /wrapper -->
    </div>

    <section class="content home">

      <div class="about division">
        <div class="row wrapper">
          <%- @partial("section/about.html.eco", @) %>
        </div>
      </div>


      <div class="speakers division">
          <div class="row wrapper">
              <h3>Speaker</h3>

              <% for speaker in @schedule: %>
                <% if speaker.presentation: %>

                  <div class="col6">
                    <div class="col1 img-speaker">
                      <img src="/img/mask.png" class="speaker-mask" alt="">
                      <img src="<%= speaker.photo %>" alt="<%= speaker.name %>" itemprop="image" class="speaker-img">
                      <div class="social">
                      <% if speaker.twitter: %>
                        <a target="_blank" href="https://twitter.com/<%= speaker.twitter %>" class="twitter">
                          <img src="http://openvisconf.com/img/twitter-icon.png" alt="Twitter Icon">
                        </a>
                      <% end %>

                      <% if speaker.github: %>
                        <a target="_blank" href="https://github.com/<%= speaker.github %>" class="github">
                          <img src="http://openvisconf.com/img/github-icon.png" alt="Github Icon">
                        </a>
                      <% end %>

                      <% if speaker.personal: %>
                        <a target="_blank" href="http://<%= speaker.personal %>" class="personal">
                          <img src="http://openvisconf.com/img/personal-icon.png" alt="Personal Website Icon">
                        </a>
                      <% end %>
                      </div><!-- /Social -->
                    </div><!-- img-speaker -->

                    <div class="col5 desc-speaker">
                      <h2><span><%= speaker.name %> /</span> <%= speaker.presentation.title %></h2>
                      <p><%= speaker.bio %></p>
                    </div>
                  </div><!-- /col6 speaker list -->

                <% end %>
              <% end %>
          </div>
      </div>
    </section><!-- content -->


    <footer class="footer">
      <div class="wrapper">
        <p>© CR Vasco da Gama 2012 – <a href="#" title="Termos de uso">Termos de Uso</a></p>
      <p>Atendimento: <a href="mailto:name@email.com" title="Entre em contato">name@email.com</a> | 0800 254256</p>

        <p class="fright">Desenvolvido por alguém</p>
      </div>
    </footer>
  </div>


</body>
</html>